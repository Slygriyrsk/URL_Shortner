<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/style.css">
  <title>URL Shortener</title>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">URL Shortener</h1>
    
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>

    <form action="/shortUrls" method="POST" class="mb-4">
      <div class="input-group">
        <input required placeholder="Enter your URL" type="url" name="fullUrl" id="fullUrl" class="form-control" aria-label="URL">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">Shorten</button>
        </div>
      </div>
    </form>
    
    <table class="table table-striped table-bordered table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>" target="_blank" class="text-primary"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>" target="_blank" class="text-success"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
            <td><%= shortUrl.createdAt.toDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy6d7vH4l1s8HV4A5es5t28hbPUr7P0IxLnhxFEg" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9dcfM0Of5+0wTUE4zTlTUKIU8oyq3NAmM7D9rr1xW9fN9mgiFb" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-O4E2VzI6O1G+QDWTFS1r5fAIQk6Vr5oNIpuH/U2fHlgk5Xt6g9x9r5e28a5t6Cp" crossorigin="anonymous"></script>
  <script src="../public/script.js"></script>
</body>
</html>
